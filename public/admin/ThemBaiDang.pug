extends ../header.pug

block title 
    title Thêm Bài Đăng Thông Báo

block append css
    link(href='https://fonts.googleapis.com/css?family=Roboto:400,700,900&display=swap' rel='stylesheet')
    link(rel='stylesheet' href='/public/source/css/ThemBaiDang.css')

block content
    section.home-section
      .home-content
        i.fa-solid.fa-bars
    .page-wrapper
      .content-new
        .content-input
          .header-input
            h3 Tạo Thông Báo
          form#formElem.mb-5
            label.col-form-label(for='') Tiêu đề *
            .form
              input#name.form-control.form-control-title(type='text' name='TieuDe' placeholder='Tiêu đề bài đăng thông báo')
            label.col-form-label(for='') Nội dung *
            textarea#message.form-control(name='NoiDung' cols='30' rows='4' placeholder='Write your message')
            input.btn.btn-primary.rounded-0.py-2.px-4#btn(value='ĐĂNG THÔNG BÁO' type='button' onclick='ThemBaiDang();return false;')
    link(href='https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css' rel='stylesheet')
    script(src='https://code.jquery.com/jquery-3.5.1.min.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js')
    // include summernote css/js
    link(href='https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css' rel='stylesheet')
    script(src='https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js')
    script.
      $("#message").summernote({
      placeholder: "Nội dung bài đăng",
      tabsize: 2,
      height: 500,
      });
    script(src='/public/source/js/main.js')
    script(src='/public/source/js/script.js')