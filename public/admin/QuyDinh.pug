doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet' href='/public/source/css/QuyDinh.css  ')
    link(rel='stylesheet' href='/public/source/css/edit-student.css ')
    link(rel='stylesheet' href='/public/source/fonts/fontawesome-free-6.2.0-web/css/all.css')
    link(rel='icon' type='image/x-icon' href='/public/source/img/favicon.png')
    link(rel='stylesheet' href='/public/source/css/style.css')
    script(src='/public/source/js/script.js')
    script(src='https://kit.fontawesome.com/7b85820244.js' crossorigin='anonymous')
    title CoCoEdu
  body
    - var role = role
    - var role_encode;
      if (role == 'Admin')
        - role_encode = "Administator"
      if (role == 'GiaoVien')
        - role_encode = "Giáo Viên"
      if (role == "HocSinh")
        - role_encode = "Học Sinh"

    .header
      .actions_user_hd
        #profile.profile_hd(onclick='menuhdToggle()')
          img(src='/public/source/img/user_none1.png' alt='image user')
        .menu_user_hd
          .profile_name #{user.HoTen}
            br
            span #{role_encode}
          ul
            li
              a(href='/user/profile/') Hồ Sơ
            li
              a(onclick="DangXuat()") Đăng Xuất
      form.search-bar
        input.searchTerm(type='text' placeholder='Tìm kiếm tại đây')
        button.searchButton(type='submit')
          i.fa-solid.fa-magnifying-glass
    // Tên app,logo app+
    // 
    // Mới sửa
    .sidebar
      .logo-details
        img(src='/public/source/img/preskool.png' alt='logo')
        a(href='/user/profile/')
          span.logo_name CoCoEdu
      // Mới sửa
      .nav_links
        .sidenav
          // Bảng điều khiển
          div
            button.dropdown-btn
              i#icon_sn.fa-solid.fa-border-all
              span.link_name Bảng điều khiển
              i#drop.fas.fa-angle-right
            .dropdown-container
              a.link_name(href='#') Bảng điều khiển
              if (role == 'Admin')
                .nbar-sub
                  a(href='/admin/Dashboard/') Administrator
              if (role == 'GiaoVien')
                .nbar-sub
                  a(href='/user/DashboardGiaoVien/') Giáo Viên
              if (role == 'HocSinh')
                .nbar-sub
                  a(href='/user/DashboardHocSinh/') Học Sinh
          // SInh viên
          if(role == 'Admin' || role == 'HocSinh')
            div
              button.dropdown-btn
                i#icon_sn.fa-solid.fa-graduation-cap
                span.link_name Học Sinh
                i#drop.fas.fa-angle-right
              .dropdown-container
                a.link_name(href='#') Học Sinh
                  if (role == "HocSinh")
                    .nbar-sub
                      a(href='/user/DanhSachHocSinh') Danh Sách Học Sinh
                  if (role == "Admin")
                    .nbar-sub
                      a(href='/admin/DanhSachHocSinh') Danh Sách Học Sinh
                  if (role == "Admin")
                    .nbar-sub
                      a(href='/admin/ThemTaiKhoan') Thêm Học Sinh
          if(role == 'Admin' || role == 'GiaoVien')
            div
              button.dropdown-btn
                i#icon_sn.fa-solid.fa-book-open
                span.link_name Lớp
                i#drop.fas.fa-angle-right
              .dropdown-container
                a.link_name(href='#') Lớp
                
                if(role == 'GiaoVien')
                  .nbar-sub
                    a(href='/user/DanhSachLopHoc') Danh Sách Lớp
                if( role == 'Admin')
                  .nbar-sub
                    a(href='/admin/DanhSachLopHoc') Danh Sách Lớp
                  .nbar-sub
                    a(href='/admin/ThemLopHoc') Thêm Lớp
          // Giáo Viên
          if(role == 'Admin' || role == 'GiaoVien')
            div
              button.dropdown-btn
                i#icon_sn.fa-solid.fa-chalkboard-user
                span.link_name Giáo Viên
                i#drop.fas.fa-angle-right
              .dropdown-container
                a.link_name(href='#') Giáo Viên
                if (role =="GiaoVien")
                  .nbar-sub
                    a(href='/user/DanhSachGiaoVien') Danh Sách Giáo Viên
                if (role == "Admin")
                  .nbar-sub
                    a(href='/admin/DanhSachGiaoVien') Danh Sách Giáo Viên
                  .nbar-sub
                    a(href='/admin/ThemTaiKhoan') Thêm Giáo Viên
            // Bảng điểm
            
            if( role == "GiaoVien")
              div
                button.dropdown-btn
                  i#icon_sn.fa-regular.fa-calendar
                  span.link_name Bảng điểm
                  i#drop.fas.fa-angle-right
                .dropdown-container
                  a.link_name(href='#') Bảng điểm
                  .nbar-sub
                    a(href='#') Xem bảng điểm
                    // Mới sửa
                  .nbar-sub
                    a(href='/user/NhapDiem/TN101/') Nhập bảng điểm
                  // Mới sửa
                // Mới sửa
            
          div
            button.dropdown-btn
              i#icon_sn.fa-solid.fa-pen
              span.link_name Thông báo
              i#drop.fas.fa-angle-right
            .dropdown-container
              a.link_name(href='#') Thông báo
              .nbar-sub
                a(href='/user/XemThongBao') Xem Thông báo
              
              if (role == "Admin")
                .nbar-sub
                  a(href='/admin/DanhSachBaiDang') Danh Sách Thông báo
                .nbar-sub
                  a(href='/admin/ThemBaiDang') Tạo Thông báo
          // Quy Định
          if (role == "Admin")
            div
                button.dropdown-btn
                  i#icon_sn.fa-solid.fa-pen-ruler
                  span.link_name Quy Định
                  i#drop.fas.fa-angle-right
                .dropdown-container
                  a.link_name(href='#') Quy Định
                  .nbar-sub
                    a(href='/admin/QuyDinh') Chỉnh Sửa Quy Định
            // Báo Cáo
          if (role == "Admin" || role == "GiaoVien")
            div
                button.dropdown-btn
                  i#icon_sn.fa-solid.fa-file-invoice
                  span.link_name Báo Cáo
                  i#drop.fas.fa-angle-right
                .dropdown-container
                  a.link_name(href='#') Báo Cáo
                  .nbar-sub
                    a(href='#') Báo Cáo Tổng Kết Môn
                  .nbar-sub
                    a(href='#') Báo Cáo Tổng Kết Học Kỳ
    section.home-section#body-wrapper
      .home-content
        i.fa-solid.fa-bars
    .page-wrapper
      .content
        .page-header
          .page-header-title
            .page-header-student-title
              h3.page-title Danh sách quy định
        .student-form
          .card
            .card-table
              .card-body
                .card-body_head
                  .card-body_header
                    .page-header-student-title
                      h3.page-title Quy định
                .card-body_body
                  .Data-Table
                    .Data-Table-body
                      .Table-body
                        table.Table
                          thead.student-thead
                            tr.thead(role='row')
                              th.sorting(tabindex='0' rowspan='1' colspan='1' aria-label='QuyDinh')
                                | Quy Định
                              th.text-end.sorting(tabindex='0' rowspan='1' colspan='1' aria-label='DiaChi')
                                | Chỉnh sửa
                          tbody.student-tbody
                            tr.odd.table-normal(role='row')
                              td
                                | Số tuổi học sinh tối thiểu/tối đa nhập học
                              td.text-end
                                .action
                                  a.edit-btn.js-edit-student(href='#')
                                    i.fa-solid.fa-pen-to-square
                            tr.even.table-normal(role='row')
                              td Sĩ số lớp tối đa
                              td.text-end
                                .action
                                  a.edit-btn.js-edit-student2(href='#')
                                    i.fa-solid.fa-pen-to-square
                            tr.odd.table-normal(role='row')
                              td Số điểm tối thiểu/tối đa môn học
                              td.text-end
                                .action
                                  a.edit-btn.js-edit-student3(href='#')
                                    i.fa-solid.fa-pen-to-square
                            tr.even.table-normal(role='row')
                              td Số điểm đạt môn học
                              td.text-end
                                .action
                                  a.edit-btn.js-edit-student4(href='#')
                                    i.fa-solid.fa-pen-to-square
                    .Data-Table-footer
    // Modal
    .modal.js-modal
      .student-form-edit.js-modal-content
        .card
          .card-table
            .card-body-edit
              .modal-close.js-modal-close
                i.fa-solid.fa-xmark
              form(id='edit-tuoi')
                .page-header-student-title
                  h5.page-title Số tuổi học sinh nhập học
                .row
                  .edit-form-modal
                    .submit-form
                      .form-group.local-form
                        label
                          | Số tuổi học sinh tối thiểu
                          span.login-danger *
                        input.form-control-edit(id='TuoiToiThieu' required='' type='number' placeholder='Nhập số tuổi tối thiểu...' value=ClassDataList[6].GiaTri)
                    .submit-form
                      .form-group.local-form
                        label
                          | Số tuổi học sinh tối đa
                          span.login-danger *
                        input.form-control-edit(id='TuoiToiDa' required='' type='number' placeholder='Nhập số tuổi tối đa...' value=ClassDataList[5].GiaTri)
                .student-image-submit
                  .image-submit-btn
                    button.search-btn.btn(id="submit-button" onclick="ThayDoiTuoi()")
                      | Xác nhận
    // Modal 2
    .modal.js-modal2
      .student-form-edit.js-modal-content2
        .card
          .card-table
            .card-body-edit
              .modal-close.js-modal-close2
                i.fa-solid.fa-xmark
              form(id='edit-siso')
                .page-header-student-title
                  h5.page-title Sĩ số lớp tối đa
                .row
                  .edit-form-modal
                    .submit-form
                      .form-group.local-form
                        label
                          | Sĩ số lớp tối đa
                          span.login-danger *
                        input.form-control-edit(id='SiSoToiDa' required='' type='number' placeholder='Nhập sĩ số...' value=ClassDataList[4].GiaTri)
                .student-image-submit
                  .image-submit-btn
                    button.search-btn.btn(id="submit-button" onclick="ThayDoiSiSo()")
                      | Xác nhận
    // Modal 3
    .modal.js-modal3
      .student-form-edit.js-modal-content3
        .card
          .card-table
            .card-body-edit
              .modal-close.js-modal-close3
                i.fa-solid.fa-xmark
              form(id="edit-diem")
                .page-header-student-title
                  h5.page-title Số điểm tối thiểu/tối đa môn học
                .row
                  .edit-form-modal
                    .submit-form
                      .form-group.local-form
                        label
                          | Số điểm tối thiểu
                          span.login-danger *
                        input.form-control-edit(id='DiemToiThieu' required='' type='number' placeholder='Nhập số điểm...' value=ClassDataList[3].GiaTri)
                    .submit-form
                      .form-group.local-form
                        label
                          | Số điểm tối đa
                          span.login-danger *
                        input.form-control-edit(id='DiemToiDa' required='' type='number' placeholder='Nhập số điểm...' value=ClassDataList[2].GiaTri)
                .student-image-submit
                  .image-submit-btn
                    button.search-btn.btn(id="submit-button" onclick="ThayDoiDiemToiThieuToiDa()")
                      | Xác nhận
    // Modal 4
    .modal.js-modal4
      .student-form-edit.js-modal-content4
        .card
          .card-table
            .card-body-edit
              .modal-close.js-modal-close4
                i.fa-solid.fa-xmark
              form(id="edit-diemdat")
                .page-header-student-title
                  h5.page-title Số điểm đạt môn học
                .row
                  .edit-form-modal
                    .submit-form
                      .form-group.local-form
                        label
                          | Số điểm trung bình đạt của 1 môn học
                          span.login-danger *
                        input.form-control-edit(id='DiemDatMon' required='' type='number' placeholder='Nhập số điểm...' value=ClassDataList[1].GiaTri)
                    .submit-form
                      .form-group.local-form
                        label
                          | Số điểm trung bình đạt của học sinh (trên học kỳ)
                          span.login-danger *
                        input.form-control-edit(id='DiemDat' required='' type='number' placeholder='Nhập số điểm...' value=ClassDataList[0].GiaTri)
                .student-image-submit
                  .image-submit-btn
                    button.search-btn.btn(id="submit-button" onclick="ThayDoiDiemDat()")
                      | Xác nhận
    script(src='/public/source/js/main.js')
    script(src='/public/source/js/edit-student.js ')
    script(src='/public/source/js/quydinh.js ')
